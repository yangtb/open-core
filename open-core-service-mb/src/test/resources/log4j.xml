<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="CONSOLE-APPENDER" class="org.apache.log4j.ConsoleAppender">
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="debug"></param>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %-32t - %m%n" />
		</layout>
	</appender>

	<appender name="DEFAULT-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="./logs/opencore/default.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %-32t - %m%n" />
		</layout>
	</appender>

	<appender name="ERROR-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="./logs/opencore/error.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %-32t - %m%n" />
		</layout>
	</appender>

	<appender name="OPENCORE-SERVICE-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="./logs/opencore/opencore-service.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %-32t - %m%n" />
		</layout>
	</appender>

	<appender name="OPENCORE-INTEGRATION-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="./logs/opencore/opencore-integration.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %-32t - %m%n" />
		</layout>
	</appender>

	<appender name="OPENCORE-DAL-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="./logs/opencore/opencore-dal.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %-32t - %m%n" />
		</layout>
	</appender>

	<appender name="OPENCORE-COMMON-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="./logs/opencore/opencore-common.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %-32t - %m%n" />
		</layout>
	</appender>

	<logger name="com.sm.open.core.service" additivity="false">
		<level value="${log_level}" />
		<appender-ref ref="CONSOLE-APPENDER" />
		<appender-ref ref="DEFAULT-APPENDER" />
		<appender-ref ref="OPENCORE-SERVICE-APPENDER" />
	</logger>

	<logger name="com.sm.open.core.integration" additivity="false">
		<level value="${log_level}" />
		<appender-ref ref="CONSOLE-APPENDER" />
		<appender-ref ref="DEFAULT-APPENDER" />
		<appender-ref ref="OPENCORE-INTEGRATION-APPENDER" />
	</logger>

	<logger name="com.sm.open.core.dal" additivity="false">
		<level value="${log_level}" />
		<appender-ref ref="CONSOLE-APPENDER" />
		<appender-ref ref="DEFAULT-APPENDER" />
		<appender-ref ref="OPENCORE-DAL-APPENDER" />
	</logger>

	<logger name="com.sm.open.core.common" additivity="false">
		<level value="${log_level}" />
		<appender-ref ref="CONSOLE-APPENDER" />
		<appender-ref ref="DEFAULT-APPENDER" />
		<appender-ref ref="OPENCORE-COMMON-APPENDER" />
	</logger>

	<logger name="monitor" additivity="false">
		<level value="${log_level}" />
		<appender-ref ref="ERROR-APPENDER" />
	</logger>

	<root>
		<level value="${log_level}" />
		<appender-ref ref="CONSOLE-APPENDER" />
		<appender-ref ref="DEFAULT-APPENDER" />
		<appender-ref ref="ERROR-APPENDER" />
	</root>

</log4j:configuration>
